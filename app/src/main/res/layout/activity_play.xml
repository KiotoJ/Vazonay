<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:descendantFocusability="blocksDescendants"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lokoApp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/linear_fanehoana_ambony"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </RelativeLayout>
        <TextView
            android:id="@+id/show_tonon_kira"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/open_sans_regular"
            android:padding="10px"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/show_facebook_paypal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/paypal"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/paypal"/>
            <ImageView
                android:id="@+id/fb"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:background="@null"
                app:srcCompat="@drawable/facebook"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linear_fanehoana_ambany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@drawable/customborder">

        <TextView
            android:id="@+id/play_titra_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13pt"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/courgette_regular"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/info_play_titra_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="6pt"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingLeft="2dp"
                android:paddingRight="5dp"
                android:background="#239328"
                android:fontFamily="@font/open_sans_regular"
                android:textAlignment="center"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!--ImageButton
            android:id="@+id/back_gro_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            app:srcCompat="@drawable/routier" /-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <SeekBar
                    android:id="@+id/progress_bar_vazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/duration_vazo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/open_sans_regular"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_fandefasana_hira"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <!--ImageButton
                    android:id="@+id/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@android:drawable/btn_star" /-->

                <ImageButton
                    android:id="@+id/previous"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/prev" />
                <ImageButton
                    android:id="@+id/alefa_hira"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:background="@null"
                    app:srcCompat="@drawable/play" />

                <ImageButton
                    android:id="@+id/next"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/next" />

                <ImageButton
                    android:id="@+id/play_loop"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    app:srcCompat="@drawable/play_again" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>