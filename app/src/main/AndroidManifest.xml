<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.antsivaskoto">

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Vazonay">
        android:supportsRtl="true">
        <activity android:name="com.example.antsivaskoto.PlayActivity"></activity>
        <activity android:name="com.example.antsivaskoto.Mp3Activity"></activity>

        <activity
            android:name="com.example.antsivaskoto.SplashScreenActivity"
            android:label="@string/title_activity_splash_screen"
            android:theme="@style/Theme.Vazonay.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!--category android:name="android.intent.category.LAUNCHER" /-->
            </intent-filter>
        </activity>

        <service
            android:name="com.example.antsivaskoto.MediaPlayerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="com.example.antsivaskoto.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>